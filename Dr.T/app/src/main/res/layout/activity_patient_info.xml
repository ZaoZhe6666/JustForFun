<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudPrimary"
    tools:context="com.example.myapplication.MainActivity">

    <LinearLayout
        android:id="@+id/l_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="?attr/colorPrimary"
        >
        <com.vrphogame.thyroid.widget.ToolbarViewCommon
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:myTitleText_common="Patient information"
            custom:myBackCode_common="@string/fa_angle_left"
            custom:myCompleteText_common="Finish"
            >
        </com.vrphogame.thyroid.widget.ToolbarViewCommon>

    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_title"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/rl_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rl_content_bg"
                android:layout_marginTop="2dp"
                >
                <LinearLayout
                    android:id="@+id/ll_edit_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_h3"
                        android:text="Gender"
                        android:textColor="@color/colorThyroidApp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_input_gender"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_edit_gender"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unknown"
                        android:enabled="false"
                        android:textColor="@color/textColorDefault"
                        />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rl_content_bg"
                android:layout_marginTop="2dp"
                >
                <LinearLayout
                    android:id="@+id/ll_edit_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_h3"
                        android:text="Age"
                        android:textColor="@color/colorThyroidApp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_input_age"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_edit_age"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unknown"
                        android:enabled="false"
                        android:textColor="@color/textColorDefault"
                        />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rl_content_bg"
                android:layout_marginTop="2dp"
                >
                <LinearLayout
                    android:id="@+id/ll_edit_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_h3"
                        android:text="Date of visit"
                        android:textColor="@color/colorThyroidApp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_input_date"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_edit_date"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unknown"
                        android:enabled="false"
                        android:textColor="@color/textColorDefault"
                        />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
